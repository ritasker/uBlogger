                "Nancy": "2.0.0-clinteastwood",
                "Nancy.Validation.FluentValidation": "2.0.0-clinteastwood",
                "MediatR": "3.0.0",
                "Microsoft.NETCore.App": {
                    "type": "platform",
                    "version": "1.0.1"
